{
	"manifest_version": 2,
	"name": "Selected Text To Speak",
	"description": "Extension to speak selected text",
	"version": "1.0",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"browser_action": {
		"default_action": "icon16.png",
		"default_popup": "configPopup.html"
	},
	"background": {
		"scripts": [
			"contextMenus.js"
		],
		"persistent": false
	},
	"permissions": [
		"contextMenus",
		"tts",
		"storage",
		"notifications"
	]
}